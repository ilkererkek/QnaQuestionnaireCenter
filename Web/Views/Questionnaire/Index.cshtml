@model IEnumerable<Entity.Concrete.Questionnaire>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row align-content-center mx-4">
    <div class = "col-7 mt-5 mb-4">
        <h1 class="">Questionnaires</h1>
    </div>
    <div class="col-4 mt-5 mb-4 ">
         <a class="btn btn-primary px-4 py-2" style=" font-size: larger;" asp-action="Create">Create</a>
    </div>
</div>

@foreach(var item in Model)
{
      <div class="row mt-3 mx-4">
          <div class = "col-8">
               <div class="card border-dark">
                   <div class="card-header">
                   <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                 </div>
                 <div class="card-body">
                    <h5>@Html.DisplayFor(modelItem => item.Description)</h5>
                    <div class = "text-end">
                        <a class="btn btn-outline-primary text-lg" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </div>
                 </div>
                  <div class="card-footer  text-muted text-end">
                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                  </div>
               </div>
          </div>
      </div>
}
