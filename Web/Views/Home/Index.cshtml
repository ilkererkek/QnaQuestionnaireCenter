@using Entity.Concrete
@model List<Questionnaire>
@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron py-5">
  <div class="container">
    <h1 class="display-4">QnA Questionnaire Center</h1>
    <p class="lead">Publish and Participate Questionnaires.</p>
  </div>
</div>

@foreach(var item in Model)
{
      <div class="row mt-3 mx-4">
          <div class = "col-8">
               <div class="card border-dark">
                   <div class="card-header">
                   <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                 </div>
                 <div class="card-body">
                    <h5>@Html.DisplayFor(modelItem => item.Description)</h5>
                    <div class = "text-end">
                        <a class="btn btn-outline-primary text-lg" asp-action="Details" asp-route-id="@item.Id">Participate</a>
                    </div>
                 </div>
                  <div class="card-footer  text-muted text-end">
                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                  </div>
               </div>
          </div>
      </div>
}
